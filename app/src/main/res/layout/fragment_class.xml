<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.android.thompson.scott.dojomanager.ClassFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/class_classLabel_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/class_label"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"/>

        <Space
            style="@style/ThemeOverlay.AppCompat.Light"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_classDuration_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/class_duration_label"/>

            <EditText
                android:id="@+id/class_duration_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/class_duration_label"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        style="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/class_color_label"
            style="@style/AppTheme.LineSeparator"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="bottom"
            android:text="@string/class_color_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="monospace"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/class_color_red"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#ae5252"/>

                <ImageView
                    android:id="@+id/class_color_orange"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#fcb271"/>

                <ImageView
                    android:id="@+id/class_color_yellow"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#f9ec7f"/>

                <ImageView
                    android:id="@+id/class_color_green"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#94e684"/>

                <ImageView
                    android:id="@+id/class_color_blue"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#6b7eb9"/>

                <ImageView
                    android:id="@+id/class_color_purple"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#906fa4"/>

                <ImageView
                    android:id="@+id/class_color_white"
                    android:layout_width="31dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_surround_bw"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

    </LinearLayout>

    <Space
        style="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <Button
        android:id="@+id/class_takeAttendance_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:text="@string/class_takeAttendance"/>

</LinearLayout>

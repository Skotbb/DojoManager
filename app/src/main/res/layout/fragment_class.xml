<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.android.thompson.scott.dojomanager.ClassFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/class_classLabel_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/class_label"
            android:selectAllOnFocus="true"
            android:maxLines="1"/>

        <Space
            style="@style/ThemeOverlay.AppCompat.Light"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_classDuration_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/class_duration_label"/>

            <EditText
                android:id="@+id/class_duration_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/class_duration_label"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
